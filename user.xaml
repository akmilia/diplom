<Window x:Class="diplom.user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diplom"
        xmlns:components="clr-namespace:diplom.Components"
        mc:Ignorable="d"
        Title="Пользователь" MinHeight="600" MinWidth="700" Closing="Window_Closing" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <components:HeaderSimple Grid.Row="0"></components:HeaderSimple>
        <TextBlock Text="Пользователь" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 20 0 20" Grid.Row="1"/>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Основная информация о пользователе -->
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Top" Width="650" Margin="0 10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Логин -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" FontWeight="Bold" Margin="5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="LoginTextBox" Margin="5" Text="{Binding Login}"/>

                        <!-- Пароль -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль:" FontWeight="Bold" Margin="5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="PasswordTextBox" Margin="5" Text="{Binding Password}"/>

                        <!-- Фамилия -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия:" FontWeight="Bold" Margin="5"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="Surname" Margin="5" Text="{Binding Surname}"/>

                        <!-- Имя -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Имя:" FontWeight="Bold" Margin="5"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="NameN" Margin="5" Text="{Binding Name}"/>

                        <!-- Отчество -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Отчество:" FontWeight="Bold" Margin="5"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="Paternity" Margin="5" Text="{Binding Paternity}"/>

                        <!-- Роль -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Роль:" FontWeight="Bold" Margin="5"/>
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="Role" Margin="5" Text="{Binding Role}" IsEnabled="False"/>

                        <!-- Дата рождения -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Дата рождения:" FontWeight="Bold" Margin="5"/>
                        <DatePicker Grid.Row="6" Grid.Column="1" x:Name="BirthDatePicker" Margin="5" SelectedDate="{Binding DateBirth}"/>
                    </Grid>
                </Border>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                    <Button Content="Удалить" Width="300" Click="Button_Click" Margin="5"/>
                    <Button Content="Сохранить" Width="300" Click="Button_Click_1" Margin="5"/>
                </StackPanel>

                <!-- Занятия пользователя -->
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="650" Margin="0 10">
                    <StackPanel>
                        <TextBlock Text="Занятия пользователя" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="Занятие 1:" FontWeight="Bold" Width="150"/>
                            <TextBlock Text="Математика" Width="420"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Статус оплаты занятий -->
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="650" Margin="0 10">
                    <StackPanel>
                        <TextBlock Text="Статус оплаты занятий" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="Занятие 1:" FontWeight="Bold" Width="150"/>
                            <TextBlock Text="Оплачено" Width="420"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox x:Name="ThursdayListBox" Grid.Column="3" Grid.Row="1" Width="200" Height="450">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander>

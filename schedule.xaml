                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding StringFormat='{}{0:dd.MM.yyyy}'}" 
                      Click="Button_Click_1"
                      Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Expander}}"
                      Margin="2"
                      Style="{StaticResource RoundedButtonStyle}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox x:Name="WednesdayListBox" Grid.Column="2" Grid.Row="1" Width="200" Height="450">

<Page x:Class="diplom.schedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diplom"
        xmlns:components="clr-namespace:diplom.Components" 
    mc:Ignorable="d"
    Title="Занятия" MinHeight="700" MinWidth="1240" Background="White" Loaded="Schedule_Loaded">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <components:Header Grid.Row="0"></components:Header>
        <TextBlock Text="Расписание" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Grid.Row="1"/>

        <Grid Grid.Row="2" Margin="25" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Понедельник" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center"/>
            <TextBlock Text="Вторник" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center"/>
            <TextBlock Text="Среда" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center"/>
            <TextBlock Text="Четверг" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center"/>
            <TextBlock Text="Пятница" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center"/>
            <TextBlock Text="Суббота" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Center"/>

            <!--<ListBox Grid.Column="1" Grid.Row="1" Name="MondayListBox" Width="200" Height="450"/>
              <ListBox Grid.Column="1" Grid.Row="1" Name="TuesdayListBox" Width="200" Height="450"/>
              <ListBox Grid.Column="2" Grid.Row="1" Name="WednesdayListBox" Width="200" Height="450"/>
              <ListBox Grid.Column="3" Grid.Row="1" Name="ThursdayListBox" Width="200" Height="450"/>
              <ListBox Grid.Column="4" Grid.Row="1" Name="FridayListBox" Width="200" Height="450"/>
              <ListBox Grid.Column="5" Grid.Row="1" Name="SaturdayListBox" Width="200" Height="450"/> -->
            <ListBox x:Name="MondayListBox" Grid.Column="0" Grid.Row="1" Width="200" Height="450">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander>
                            <Expander.Header>
                                <StackPanel>
                                    <TextBlock Text="{Binding Time}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Subject}"/>
                                    <TextBlock Text="{Binding Teacher}"/>
                                    <TextBlock Text="{Binding Cabinet}"/>
                                </StackPanel>
                            </Expander.Header>
                            <StackPanel>
                                <TextBlock Text="Даты:" FontWeight="Bold" Margin="0,5"/>
                                <ItemsControl ItemsSource="{Binding Dates}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding StringFormat='{}{0:dd.MM.yyyy}'}" 
                                            Click="Button_Click_1"
                                            Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Expander}}"
                                            Margin="2"
                                            Style="{StaticResource RoundedButtonStyle}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox x:Name="TuesdayListBox" Grid.Column="1" Grid.Row="1" Width="200" Height="450">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander>

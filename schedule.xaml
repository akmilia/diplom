<Page x:Class="diplom.schedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diplom"
        xmlns:components="clr-namespace:diplom.Components" 
        mc:Ignorable="d"
        Title="Занятия" MinHeight="700" MinWidth="1240" Background="White" Loaded="Schedule_Loaded">
    <Page.Resources>
        <Style x:Key="ScheduleExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border Background="{TemplateBinding Background}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           CornerRadius="4">
                            <DockPanel>
                                <ToggleButton x:Name="HeaderSite"
                                       Content="{TemplateBinding Header}"
                                       DockPanel.Dock="Top"
                                       Style="{StaticResource ExpanderToggleButtonStyle}"
                                       IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <ContentPresenter x:Name="ExpandSite"
                                           DockPanel.Dock="Bottom"
                                           Visibility="Collapsed"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <components:Header Grid.Row="0"/>

        <!-- Заголовок -->
        <TextBlock Text="Расписание" 
                 Grid.Row="1"
                 FontSize="24" 
                 FontWeight="Bold" 
                 HorizontalAlignment="Center" 
                 Margin="0,20,0,10"
                 Foreground="#FF333333"/>

        <StackPanel  Margin="20" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox x:Name="GroupComboBox" DisplayMemberPath="Name"  Width="550" Margin="5"/>
            <Button Content="Экспорт в Excel" Click="ExportToExcel_Click"  Width="550" Margin="5"/>
            <Button Content="Добавление нового занятия" Click="NewSchedule_Click"  Width="550" Margin="5"/>
        </StackPanel>

        <ScrollViewer Grid.Row="3"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="10"
                    CanContentScroll="True"> 
            
            <StackPanel Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top">
                
                <Border Style="{StaticResource DayContainerStyle}">
                    <StackPanel>
                        <TextBlock Text="Понедельник" Style="{StaticResource DayHeaderStyle}"/>
                        <ListBox x:Name="MondayListBox" Style="{StaticResource DayListBoxStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Expander Style="{StaticResource ScheduleExpanderStyle}">
                                        <Expander.Header>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}" FontWeight="Bold" Foreground="#FF333333"/>
                                                <TextBlock Text="{Binding Subject}" Foreground="#FF555555"/>
                                                <TextBlock Text="{Binding Teacher}" Foreground="#FF555555" FontSize="12"/>
                                                <TextBlock Text="{Binding Cabinet}" Foreground="#FF555555" FontSize="12"/>
                                            </StackPanel>
                                        </Expander.Header>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="Даты:" FontWeight="Bold" Margin="0,0,0,4" Foreground="#FF333333"/>
                                            <WrapPanel>
                                                <ItemsControl ItemsSource="{Binding Dates}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{Binding StringFormat='{}{0:dd.MM}'}" 
                                                            Style="{StaticResource DateButtonStyle}"
                                                            Click="Button_Click_1"
                                                            Tag="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=DataContext}"
                                                            CommandParameter="{Binding}"/>    
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </WrapPanel>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Вторник -->
                <Border Style="{StaticResource DayContainerStyle}">
                    <StackPanel>
                        <TextBlock Text="Вторник" Style="{StaticResource DayHeaderStyle}"/>
                        <ListBox x:Name="TuesdayListBox" Style="{StaticResource DayListBoxStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Expander Style="{StaticResource ScheduleExpanderStyle}">
                                        <Expander.Header>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}" FontWeight="Bold" Foreground="#FF333333"/>
                                                <TextBlock Text="{Binding Subject}" Foreground="#FF555555"/>
                                                <TextBlock Text="{Binding Teacher}" Foreground="#FF555555" FontSize="12"/>
                                                <TextBlock Text="{Binding Cabinet}" Foreground="#FF555555" FontSize="12"/>
                                            </StackPanel>
                                        </Expander.Header>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="Даты:" FontWeight="Bold" Margin="0,0,0,4" Foreground="#FF333333"/>
                                            <WrapPanel>
                                                <ItemsControl ItemsSource="{Binding Dates}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{Binding StringFormat='{}{0:dd.MM}'}" 
                                                            Style="{StaticResource DateButtonStyle}"
                                                            Click="Button_Click_1"
                                                            Tag="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=DataContext}"
                                                            CommandParameter="{Binding}"/>  
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </WrapPanel>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Среда -->
                <Border Style="{StaticResource DayContainerStyle}">
                    <StackPanel>
                        <TextBlock Text="Среда" Style="{StaticResource DayHeaderStyle}"/>
                        <ListBox x:Name="WednesdayListBox" Style="{StaticResource DayListBoxStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Expander Style="{StaticResource ScheduleExpanderStyle}">
                                        <Expander.Header>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}" FontWeight="Bold" Foreground="#FF333333"/>
                                                <TextBlock Text="{Binding Subject}" Foreground="#FF555555"/>
                                                <TextBlock Text="{Binding Teacher}" Foreground="#FF555555" FontSize="12"/>
                                                <TextBlock Text="{Binding Cabinet}" Foreground="#FF555555" FontSize="12"/>
                                            </StackPanel>
                                        </Expander.Header>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="Даты:" FontWeight="Bold" Margin="0,0,0,4" Foreground="#FF333333"/>
                                            <WrapPanel>
                                                <ItemsControl ItemsSource="{Binding Dates}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{Binding StringFormat='{}{0:dd.MM}'}" 
                                                            Style="{StaticResource DateButtonStyle}"
                                                            Click="Button_Click_1"
                                                            Tag="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=DataContext}"
                                                            CommandParameter="{Binding}"/>      
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </WrapPanel>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Четверг -->
                <Border Style="{StaticResource DayContainerStyle}">
                    <StackPanel>
                        <TextBlock Text="Четверг" Style="{StaticResource DayHeaderStyle}"/>
                        <ListBox x:Name="ThursdayListBox" Style="{StaticResource DayListBoxStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Expander Style="{StaticResource ScheduleExpanderStyle}">
                                        <Expander.Header>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}" FontWeight="Bold" Foreground="#FF333333"/>
                                                <TextBlock Text="{Binding Subject}" Foreground="#FF555555"/>
                                                <TextBlock Text="{Binding Teacher}" Foreground="#FF555555" FontSize="12"/>
                                                <TextBlock Text="{Binding Cabinet}" Foreground="#FF555555" FontSize="12"/>
                                            </StackPanel>
                                        </Expander.Header>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="Даты:" FontWeight="Bold" Margin="0,0,0,4" Foreground="#FF333333"/>
                                            <WrapPanel>
                                                <ItemsControl ItemsSource="{Binding Dates}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{Binding StringFormat='{}{0:dd.MM}'}" 
                                                            Style="{StaticResource DateButtonStyle}"
                                                            Click="Button_Click_1"
                                                            Tag="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=DataContext}"
                                                            CommandParameter="{Binding}"/>  
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </WrapPanel>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Пятница -->
                <Border Style="{StaticResource DayContainerStyle}">
                    <StackPanel>
                        <TextBlock Text="Пятница" Style="{StaticResource DayHeaderStyle}"/>
                        <ListBox x:Name="FridayListBox" Style="{StaticResource DayListBoxStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Expander Style="{StaticResource ScheduleExpanderStyle}">
                                        <Expander.Header>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}" FontWeight="Bold" Foreground="#FF333333"/>
                                                <TextBlock Text="{Binding Subject}" Foreground="#FF555555"/>
                                                <TextBlock Text="{Binding Teacher}" Foreground="#FF555555" FontSize="12"/>
                                                <TextBlock Text="{Binding Cabinet}" Foreground="#FF555555" FontSize="12"/>
                                            </StackPanel>
                                        </Expander.Header>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="Даты:" FontWeight="Bold" Margin="0,0,0,4" Foreground="#FF333333"/>
                                            <WrapPanel>
                                                <ItemsControl ItemsSource="{Binding Dates}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{Binding StringFormat='{}{0:dd.MM}'}" 
                                                              Style="{StaticResource DateButtonStyle}"
                                                              Click="Button_Click_1"
                                                              Tag="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=DataContext}"
                                                              CommandParameter="{Binding}"/>    
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </WrapPanel>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Суббота -->
                <Border Style="{StaticResource DayContainerStyle}">
                    <StackPanel>
                        <TextBlock Text="Суббота" Style="{StaticResource DayHeaderStyle}"/>
                        <ListBox x:Name="SaturdayListBox" Style="{StaticResource DayListBoxStyle}">
                             <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Expander Style="{StaticResource ScheduleExpanderStyle}">
                                        <Expander.Header>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}" FontWeight="Bold" Foreground="#FF333333"/>
                                                <TextBlock Text="{Binding Subject}" Foreground="#FF555555"/>
                                                <TextBlock Text="{Binding Teacher}" Foreground="#FF555555" FontSize="12"/>
                                                <TextBlock Text="{Binding Cabinet}" Foreground="#FF555555" FontSize="12"/>
                                            </StackPanel>
                                        </Expander.Header>
                                        <StackPanel Margin="0,8,0,0">
                                            <TextBlock Text="Даты:" FontWeight="Bold" Margin="0,0,0,4" Foreground="#FF333333"/>
                                            <WrapPanel>
                                                <ItemsControl ItemsSource="{Binding Dates}">
                                                    <ItemsControl.ItemTemplate>
                                                         <DataTemplate>
                                                         <Button Content="{Binding StringFormat='{}{0:dd.MM}'}" 
                                                         Style="{StaticResource DateButtonStyle}"
                                                         Click="Button_Click_1"
                                                         Tag="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=DataContext}"
                                                         CommandParameter="{Binding}"/>  
                                                         </DataTemplate>
                                                     </ItemsControl.ItemTemplate>
                                                 </ItemsControl>
                                             </WrapPanel>
                                         </StackPanel>
                                     </Expander>
                                 </DataTemplate>
                             </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

                                </StackPanel>
                            </Expander.Header>
                            <StackPanel>
                                <TextBlock Text="Даты:" FontWeight="Bold" Margin="0,5"/>
                                <ItemsControl ItemsSource="{Binding Dates}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding StringFormat='{}{0:dd.MM.yyyy}'}" 

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox x:Name="FridayListBox" Grid.Column="4" Grid.Row="1" Width="200" Height="450">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander>
                            <Expander.Header>
                                <StackPanel>
                                    <TextBlock Text="{Binding Time}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Subject}"/>
                                    <TextBlock Text="{Binding Teacher}"/>
